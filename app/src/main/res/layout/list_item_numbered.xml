<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:paddingEnd="@dimen/small_padding"
	android:paddingStart="0dp">

	<TextView
		android:id="@+id/line_number"
		android:layout_width="@dimen/tiny_padding"
		android:layout_height="match_parent"
		android:background="@color/line_number_background"
		android:maxLines="1"
		android:paddingEnd="@dimen/small_padding"
		android:paddingStart="@dimen/small_padding"
		android:textAlignment="textEnd"
		android:textColor="@color/primary_dark" />

	<TextView
		android:id="@+id/line_content"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingBottom="@dimen/tiny_padding"
		android:paddingEnd="@dimen/tiny_padding"
		android:paddingStart="@dimen/small_padding"
		android:paddingTop="@dimen/tiny_padding" />
</LinearLayout>